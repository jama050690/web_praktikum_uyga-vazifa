<!DOCTYPE html>
<html>
  <head>
    <title><%= projectName %> | Achievements</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- CSS -->
    <link rel="stylesheet" href="/assets/css/main.css" />
  </head>

  <body class="is-preload">
    <div id="wrapper" class="divided">
      <!-- HERO -->
      <section
        class="banner style1 orient-left content-align-left image-position-right fullscreen"
      >
        <div class="content">
          <h1><%= projectName %></h1>
          <p class="major">Achievements & Statistics</p>
        </div>

        <div class="image">
          <img src="<%= heroImage %>" alt="Lionel Messi" />
        </div>
      </section>

      <!-- ACHIEVEMENTS -->
      <section class="wrapper style1 align-center">
        <div class="inner">
          <h2>Major Trophies</h2>

          <ul class="alt">
            <li>
              üèÜ Ballon d'Or:
              <strong><%= achievements.trophies.ballonDor %></strong>
            </li>
            <li>
              üåç World Cup:
              <strong><%= achievements.trophies.worldCup %></strong>
            </li>
            <li>
              üèÜ Copa America:
              <strong><%= achievements.trophies.copaAmerica %></strong>
            </li>
            <li>
              ‚≠ê Champions League:
              <strong><%= achievements.trophies.championsLeague %></strong>
            </li>
            <li>
              üá™üá∏ La Liga: <strong><%= achievements.trophies.laLiga %></strong>
            </li>
          </ul>
        </div>
      </section>

      <!-- STATS -->
      <section class="wrapper style1 align-center">
        <div class="inner">
          <h2>Career Statistics</h2>

          <p>
            ‚öΩ Total Goals: <strong><%= achievements.stats.totalGoals %></strong
            ><br />
            üéØ Total Assists:
            <strong><%= achievements.stats.totalAssists %></strong>
          </p>

          <h3>By Club</h3>
          <ul>
            <% achievements.stats.clubs.forEach(c => { %>
            <li>
              <strong><%= c.name %></strong> ‚Äî Goals: <%= c.goals %>, Assists:
              <%= c.assists %>
            </li>
            <% }) %>
          </ul>

          <h3>National Team (Argentina)</h3>
          <p>
            Goals: <%= achievements.stats.nationalTeam.goals %><br />
            Assists: <%= achievements.stats.nationalTeam.assists %>
          </p>
        </div>
      </section>

      <!-- NAVIGATION -->
      <section class="wrapper style1 align-center">
        <ul class="actions stacked">
          <li>
            <a href="/" class="button big wide">Profile</a>
          </li>
        </ul>
      </section>

      <!-- FOOTER -->
      <footer class="wrapper style1 align-center">
        <div class="inner">
          <ul class="icons">
            <li>
              <a
                target="_blank"
                href="https://facebook.com/<%= facebookUsername %>"
                class="icon brands fa-facebook"
              ></a>
            </li>
            <li>
              <a
                target="_blank"
                href="https://tiktok.com/<%= tiktokUsername %>"
                class="icon brands fa-tiktok"
              ></a>
            </li>
            <li>
              <a
                target="_blank"
                href="https://instagram.com/<%= instagramUsername %>"
                class="icon brands fa-instagram"
              ></a>
            </li>
            <li>
              <a
                target="_blank"
                href="https://youtube.com/<%= youtubeUsername %>"
                class="icon brands fa-youtube"
              ></a>
            </li>
          </ul>

          <p>&copy; Lionel Messi Achievements. Design: HTML5 UP.</p>
        </div>
      </footer>
    </div>

    <!-- JS -->
    <script src="/assets/js/jquery.min.js"></script>
    <script src="/assets/js/main.js"></script>
  </body>
</html>

<!DOCTYPE html>
<html>
  <head>
    <title><%= projectName %></title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- CSS -->
    <link rel="stylesheet" href="/assets/css/main.css" />
    <noscript>
      <link rel="stylesheet" href="/assets/css/noscript.css" />
    </noscript>
  </head>

  <body class="is-preload">
    <div id="wrapper" class="divided">
      <!-- HERO / PROFILE -->
      <section
        class="banner style1 orient-left content-align-left image-position-right fullscreen"
      >
        <div class="content">
          <h1><%= projectName %></h1>
          <p class="major"><%= description %></p>

          <ul class="actions stacked">
            <li>
              <a href="#about" class="button big wide smooth-scroll-middle">
                About Messi
              </a>
            </li>
          </ul>
        </div>

        <div class="image">
          <!-- heroImage TO‚ÄòLIQ PATH -->
          <img src="<%= heroImage %>" alt="Lionel Messi" />
        </div>
      </section>

      <!-- ABOUT -->
      <section id="about" class="wrapper style1 align-center">
        <div class="inner">
          <h2>About</h2>
          <p><%= profile.aboutText || "" %></p>

          <ul>
            <li>üè≥ Country: <%= profile.personal.birthPlace %></li>
            <li>üéÇ Born: <%= profile.personal.birthDate %></li>
            <li>‚öΩ Position: <%= profile.personal.position %></li>
            <li>üèÜ Family: <%= profile.personal.fullName %></li>
          </ul>
          <img
            src="<%= profile.personal.img %>"
            alt="<%= profile.personal.fullName %>"
          />
        </div>
      </section>

      <!-- CAREER START -->
      <% if (profile.careerStart) { %>
      <section
        class="spotlight style1 orient-right content-align-left image-position-center"
      >
        <div class="content">
          <h2>Career Start</h2>
          <p>
            First club: <strong><%= profile.careerStart.firstClub %></strong
            ><br />
            Academy year: <%= profile.careerStart.academyYear %><br />
            Professional debut: <%= profile.careerStart.professionalDebut %><br />
            National team debut: <%= profile.careerStart.nationalTeamDebut %>
          </p>
        </div>
        <div class="image">
          <img src="<%= profile.careerStart.img %>" alt="Career start" />
        </div>
      </section>
      <% } %>

      <!-- FAMILY -->
      <% if (profile.family) { %>
      <section class="wrapper style1 align-center">
        <div class="inner">
          <h2>Family</h2>
          <p>Wife: <strong><%= profile.family.wife %></strong></p>
          <p>Children: <%= profile.family.children.join(", ") %></p>
          <% if (profile?.family?.img) { %>
          <img src="<%= profile.family.img %>" alt="His family photo" />
          <% } %>
        </div>
      </section>
      <% } %>

      <!-- GALLERY (GENERAL PHOTOS) -->
      <% if (profile.gallery?.length > 1) { %>
      <section class="wrapper style1 align-center">
        <div class="inner">
          <h2>Gallery</h2>
        </div>

        <div class="gallery style2 medium lightbox">
          <% profile.gallery.forEach(img => { %>
          <article>
            <a href="<%= img %>" class="image">
              <img src="<%= img %>" alt="Lionel Messi photo" />
            </a>
          </article>
          <% }) %>
        </div>
      </section>
      <% } %>

      <!-- FOOTER -->
      <footer class="wrapper style1 align-center">
        <div class="inner">
          <ul class="icons">
            <li>
              <a
                target="_blank"
                href="https://facebook.com/<%= facebookUsername %>"
                class="icon brands fa-facebook"
              ></a>
            </li>
            <li>
              <a
                target="_blank"
                href="https://tiktok.com/<%= tiktokUsername %>"
                class="icon brands fa-tiktok"
              ></a>
            </li>
            <li>
              <a
                target="_blank"
                href="https://instagram.com/<%= instagramUsername %>"
                class="icon brands fa-instagram"
              ></a>
            </li>
            <li>
              <a
                target="_blank"
                href="https://youtube.com/<%= youtubeUsername %>"
                class="icon brands fa-youtube"
              ></a>
            </li>
          </ul>

          <p>&copy; Lionel Messi Profile. Design: HTML5 UP.</p>
        </div>
      </footer>
    </div>

    <!-- Scripts -->
    <script src="/assets/js/jquery.min.js"></script>
    <script src="/assets/js/jquery.scrollex.min.js"></script>
    <script src="/assets/js/jquery.scrolly.min.js"></script>
    <script src="/assets/js/browser.min.js"></script>
    <script src="/assets/js/breakpoints.min.js"></script>
    <script src="/assets/js/util.js"></script>
    <script src="/assets/js/main.js"></script>
  </body>
</html>
